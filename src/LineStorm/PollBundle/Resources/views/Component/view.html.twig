<style>
    .poll-container {
        padding: 0 20px;
        border: 1px solid #cccccc;
    }
</style>
<div class="poll-container">
    <h3>{{ content.name }}</h3>
    <div class="row">
        <div class="col-xs-12">
            {{ content.body|raw }}
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form action="">
                {% for option in content.options %}
                    <p>
                        <label ><input type="checkbox" value="{{ option.order }}" /> {{ option.answer }}</label>
                    </p>
                {% endfor %}
                <p>
                    <button type="button" class="btn btn-primary">
                        Vote
                    </button>
                </p>
            </form>
        </div>
    </div>
</div>
